thermoType
{
    type            heSolidThermo;
    mixture         pureMixture;
    transport       constIso;
    thermo          hConst;
    equationOfState rhoConst;
    specie          specie;
    energy          sensibleEnthalpy;
}

mixture
{
    specie
    {
        molWeight   26.98;
    }
    transport
    {
        kappa       237;  // Conductivité thermique [W/m/K]
    }
    thermodynamics
    {
        Cp          900;  // Capacité thermique [J/kg/K]
        Hf          0;
    }
    equationOfState
    {
        rho         2700; // Masse volumique [kg/m^3]
    }
}

